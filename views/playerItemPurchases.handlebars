<h1>Player Item Purchases Table</h1>
    <h2>Will provide an overview of purchases made by each player</h2>

    <form id="addpurchase" action="/playerItemPurchases" method="post">
        <!-- pk will be auto generated -->
        <label for="">ADD PURCHASE:</label><br>
        <label for="playerID">Player ID:</label>
        <select name="playerID">       
        {{#each getPlayers}}
        <option value="{{playerID}}">{{playerID}}</option>
        {{/each}}
        </select><br>
        <label for="itemID">Item ID:</label>
        <select name="itemID">       
        {{#each getItems}}
        <option value="{{itemID}}">{{itemID}}</option>
        {{/each}}
        </select><br>
        <input type="submit" value="SUBMIT PURCHASE">
    </form><br>
    <table>
      <!-- tried adding caption but added to bottom of table... -->
      <!-- <caption>Items Player Has Purchased:</caption> -->

    <tbody>
    <thead> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Item Name</th>  
    </thead> 
        {{#each getPurchases}} 
        <tr> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{itemName}}</td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>   
    
    <table>
    <thead> 
        <th>Player ID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>vBucks</th>  
    </thead> 
    <tbody>
        {{#each getPlayers}} 
        <tr> 
            <td>{{playerID}}</td> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{vbucks}}</td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>

    <table>
    <thead> 
        <th>ID</th> 
        <th>Name</th> 
        <th>Description</th>
        <th>Cost</th>  
    </thead> 
    <tbody>
        {{#each getItems}} 
        <tr> 
            <td>{{itemID}}</td> 
            <td>{{itemName}}</td> 
            <td>{{itemDescription}}</td> 
            <td>{{vBuckCost}}</td>
        </tr> 
        {{/each}} 
    </tbody> 

    </table>

