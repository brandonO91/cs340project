<form id="update-player" action="/players" method="post">
    <label for="">UPDATE PLAYER:</label><br>
    First name: <input type="text" name="fname" value="{{getPlayer.fname}}"><br>
    Last name: <input type="text" name="lname" value="{{getPlayer.lname}}"><br>
    VBucks: <input type="number" name="vbucks" value="{{getPlayer.vbucks}}"><br>
    Level: <input type="number" name="level" value="{{getPlayer.level}}"><br>
    Team: <select name="teamID">
    {{#each getTeams}}
        <option value="{{id}}">{{title}}</option>
    {{/each}}
    </select><br>
    Still Kickin?: <input type="number" name="playerAlive" value="{{getPlayer.playerAlive}}"><br>


<button onclick="updatePlayer({{getPlayer.id}})">Update</button>
<script defer>selectTeam({{getPlayer.teamID}});</script>
</form>
