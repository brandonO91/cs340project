    <h1>Player Inventories Table</h1>
    <h2>Records the players inventory for the current game - If created will update:</h2>

<form action="" method="POST">
        <label for="">PLAYER INVENTORY:</label><br>
        <label for="playerID">Players ID:</label>
        <input type="number" name="playerID" id="playerID"><br>
        <label for="health">Health:</label>
        <input type="number" id="health" name="health"><br>
        <label for="medKit">Med Kit:</label>
        <input type="number" id="medkit" name="medkit"><br>
        <label for="shield">Shield:</label>
        <input type="number" id="shield" name="shield"><br>
        <label for="shieldPotion">Shield Potion:</label>
        <input type="number" id="shieldPotion" name="shieldPotion"><br>
        <label for="shotgun">Shotgun:</label>
        <input type="number" id="shotgun" name="shotgun"><br>
        <label for="shotgunAmmo">Shotgun Ammo:</label>
        <input type="number" id="shotgunAmmo" name="shotgunAmmo"><br>
        <label for="rifle">Rifle:</label>
        <input type="number" id="rifle" name="rifle"><br>
        <label for="rifleAmmo">Rifle Ammo:</label>
        <input type="number" id="rifleAmmo" name="rifleAmmo"><br>
        <label for="xpPoints">XP Points:</label>
        <input type="number" id="xpPoints" name="xpPoints"><br>
        <input type="submit" value="SUBMIT CHANGES">
    </form>


<table>
    <thead> 
        <th>Player ID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Health</th>  
        <th>Med Kit</th> 
        <th>Shield</th> 
        <th>Shield Potion</th>
        <th>Shotgun</th> 
        <th>Shotgun Ammo</th> 
        <th>Rifle</th> 
        <th>Rifle Ammo</th>
        <th>XP Points</th> 
    </thead> 
    <tbody>
        {{#each playerInventories}} 
        <tr> 
            <td>{{playerID}}</td> 
            <td>{{health}}</td> 
            <td>{{medKit}}</td> 
            <td>{{shield}}</td>
            <td>{{shieldPotion}}</td> 
            <td>{{shotgun}}</td> 
            <td>{{shotgunAmmo}}</td> 
            <td>{{rifleAmmo}}</td>
            <td>{{xpPoints}}</td>
        </tr> 
        {{/each}} 
    </tbody> 

</table> 
</html>
