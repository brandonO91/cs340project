    <h1>Players Table</h1>
    <h2>Records the details of registered players</h2>


    <!-- pk player id, fname, lname, vBuckQty, level, fk teamID, playerAlive -->
    <form action="" method="POST">
        <!-- pk will be auto generated -->
        <label for="">ADD PLAYER:</label>
        <label for="fname">First name:</label>
        <input type="text" id="fname" name="fname">
        <label for="lname">Last name:</label>
        <input type="text" id="lname" name="lname">
        <label for="vBuckQty">VBucks:</label>
        <input type="number" id="vBuckQty" name="vBuckQty">
        <label for="level">Level:</label>
        <input type="number" id="level" name="level">
        <label for="teamID">Team:</label>
        <input type="number" id="teamID" name="teamID">
        <input type="submit" value="SUBMIT PLAYER">
    </form><br>

    <form action="" method="POST">
        <!-- pk will be auto generated -->
        <label for="">UPDATE PLAYER:</label><br>
        <label for="playerID">Players ID:</label>
        <input type="number" name="playerID" id="playerID"><br>
        <label for="fname">First Name:</label>
        <input type="text" id="fname" name="fname"><br>
        <label for="lname">Last name:</label>
        <input type="text" id="lname" name="lname"><br>
        <label for="vBuckQty">VBucks:</label>
        <input type="number" id="vBuckQty" name="vBuckQty"><br>
        <label for="level">Level:</label>
        <input type="number" id="level" name="level"><br>
        <label for="teamID">Team:</label>
        <input type="number" id="teamID" name="teamID"><br>
        <label for="playerAlive">Still kickin'?:</label>
        <input type="radio" id="playerAlive-true" name="playerAlive-true">
        <label for="playerAlive-true">Yes</label>
        <input type="radio" id="playerAlive-false" name="playerAlive-false">
        <label for="playerAlive-false">No</label><br>
        <input type="submit" value="SUBMIT CHANGES">
    </form><br>

    <table>
        <tr>
            <th>Team ID</th>
            <th>Team Name</th>
        </tr>
        <tr>
            <td>1</td>
            <td>Leg Lockers</td>
        </tr>
        <tr>
            <td>2</td>
            <td>Team Detective</td>
        </tr>
        <tr>
            <td>3</td>
            <td>4D</td>
        </tr>
    </table><br>


<table>
    <thead> 
        <th>Player ID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>vBucks</th>  
        <th>Level</th> 
        <th>Team</th> 
        <th>Still kickin'?</th>
    </thead> 
    <tbody>
        {{#each players}} 
        <tr> 
            <td>{{playerID}}</td> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{vbucks}}</td>
            <td>{{level}}</td> 
            <td>{{teamID}}</td> 
            <td>{{playerAlive}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 

</table> 
</html>
