<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="\bootstrap\dist\css\bootstrap.css" type="text/css">
    <title>Index</title>
</head>

<body class="home-body">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/players">Players</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/playerItemPurchases">Player Item Purchases</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/itemShops">Items Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/teams">Teams</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/playerInventories">Player Inventories</a>
          </li>
        </ul>
      </div>
      <div class="company-logo"><img src="/images/logo.PNG" alt="FORTNITE" width="200" height="30">
      </div>
    </nav>

    <h1>Players Table</h1>
    <h2>Records the details of registered players</h2>


    <!-- pk player id, fname, lname, vBuckQty, level, fk teamID, playerAlive -->
    <form id="addplayer" action="/players" method="post">
        <!-- pk will be auto generated -->
        <label for="">ADD PLAYER:</label>
        <label for="fname">First name:</label>
        <input type="text" name="fname">
        <label for="lname">Last name:</label>
        <input type="text" name="lname">
        <label for="vbucks">VBucks:</label>
        <input type="number" name="vbucks">
        <label for="level">Level:</label>
        <input type="number" name="level">
        <label for="teamID">Team:</label>
        <select name="teamID">       
        {{#each getTeams}}
        <option value="{{id}}">{{title}}</option>
        {{/each}}
        </select><br>
        <input type="submit" value="SUBMIT PLAYER">
    </form><br>

<table>
    <thead> 
        <th>Team ID</th> 
        <th>Team Name</th> 
    </thead> 
    <tbody>
        {{#each getTeams}} 
        <tr> 
            <td>{{id}}</td> 
            <td>{{title}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table> 


<table>
    <thead> 
        <th>Player ID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>vBucks</th>  
        <th>Level</th> 
        <th>Team</th> 
        <th>Still kickin'?</th>
    </thead> 
    <tbody>
        {{#each getPlayers}} 
        <tr> 
            <td>{{id}}</td> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{vbucks}}</td>
            <td>{{level}}</td> 
            <td>{{teamID}}</td> 
            <td>{{playerAlive}}</td>
            <td><button onclick="deletePlayer({{id}})">Delete</button></td>
            <td><a href="/players/{{id}}"><button>Update</button></a></td> 
        </tr> 
        {{/each}} 
    </tbody>

</table><br><br>
</html>
