    <h1>Item Shops Table</h1>
    <h2>Records details of items available for vBuck purchases</h2>

    
    <form action="" method="POST">
        <!-- pk will be auto generated -->
        <label for="">ADD ITEM:</label><br>
        <label for="itemName">Item Name:</label>
        <input type="text" id="itemName" name="itemName"><br>
        <label for="itemDescription">Description:</label>
        <input type="text" id="itemDescription" name="itemDescription"><br>
        <label for="vbuckCost">Cost:</label>
        <input type="number" id="vbuckCost" name="vbuckCost"><br>
        <input type="submit" value="SUBMIT ITEM">
    </form><br>

<table>
    <thead> 
        <th>ID</th> 
        <th>Name</th> 
        <th>Description</th>
        <th>Cost</th>  
    </thead> 
    <tbody>
        {{#each itemShops}} 
        <tr> 
            <td>{{itemID}}</td> 
            <td>{{itemName}}</td> 
            <td>{{itemDescription}}</td> 
            <td>{{vBuckCost}}</td>
        </tr> 
        {{/each}} 
    </tbody> 

</table> 
